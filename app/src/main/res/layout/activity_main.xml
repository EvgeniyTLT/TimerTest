<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6C624D"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="00:00:00"
        android:textColor="#B57D7D"
        android:textSize="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B57D7D"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTimer">

        <Button
            android:id="@+id/button_pause"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#F4EDED"
            android:onClick="onClickPauseTimer"
            android:text="@string/button_pause"
            android:textColor="#B57D7D"
            app:cornerRadius="40dp" />

        <Button

            android:id="@+id/button_start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F4EDED"
            android:onClick="onClickPauseStart"
            android:text="@string/button_start"
            android:textColor="#B57D7D"
            app:cornerRadius="40dp" />

        <Button
            android:id="@+id/button_stop"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#F4EDED"
            android:onClick="onClickPauseStop"
            android:text="@string/button_stop"
            android:textColor="#B57D7D"
            app:cornerRadius="40dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>